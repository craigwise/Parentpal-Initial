<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:color="@android:color/black"><shape android:shape="rectangle">
            <solid android:color="#8faefd" />

            <stroke android:width="3dp" android:color="#007AAE" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:radius="2dp" />
        </shape></item>
    <item android:color="@android:color/black"><shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

            <stroke android:width="1dp" android:color="#007AAE" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:radius="2dp" />
        </shape></item>

</selector>